{% extends 'base.html.twig' %}


{% block javascripts %}
	<script type="text/javascript" src="{{asset("js/index.js")}}"></script>
{% endblock %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="container" style="margin-top: 100px; width:100%;">
		<div class="card" style="width: 18rem;">
			<img class="card-img-top" src="{{unHackathon.image}}">
			<div class="card-body">
				<h3 class="card-title">{{unHackathon.theme}}</h3>
				<p>Date du début de l'évènement :
					{{unHackathon.dateDebut |date('d/m/Y')}}
				</p>
				<p>Date de fin de l'évènement :
					{{unHackathon.dateFin|date('d/m/Y')}}
				</p>
				<p>Heure d'ouverture de l'évènement :
					{{unHackathon.heureDebut|date('h:i')}}
				</p>
				<p>Date limite d'inscription :
					{{unHackathon.dateLimite|date('d/m/Y')}}
				</p>
				<p>{{unHackathon.lieu}},
					{{unHackathon.rue}},
					{{unHackathon.ville}},
					{{unHackathon.codePostal}}
				</p>
				<p id="nbPlaces">{{unHackathon.nbPlaces-nbInscriptions}}
					places restantes
				</p>
				{% if is_granted('IS_AUTHENTICATED_FULLY') %}
					<a class="btn btn-success" href="{{path('inscription', {'id':unHackathon.idHackathon})}}" id="inscription">S'inscrire</a>
				{% else %}
					<a>S'inscrire :</a>
					<a class="btn btn-success" href="login">Se connecter</a>
				{% endif %}
				
			</div>
		</div>
	</div>
{% endblock %}
