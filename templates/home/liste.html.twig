{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>


	<div class="row" style="margin-top: 100px;">
		{% for lesHackathons in listeHackathons %}
			<div class="col col-lg-3 col-md-4 col-sm12">
				<div class="card" style="width: 18rem;">
					<img class="card-img-top" src="{{lesHackathons.image}}">
					<div class="card-body">
						<h4 class="card-title">{{lesHackathons.theme}}</h4>
						<h6>{{lesHackathons.lieu}},
							{{lesHackathons.ville}},
							{{lesHackathons.codePostal}}
						</h6>
						<button href="#">En savoir plus</button>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>


{% endblock %}
