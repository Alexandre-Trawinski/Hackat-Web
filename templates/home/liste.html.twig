{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container">
			<ul>
				{% for lesHackathons in listeHackathons %}
				<div class="row">
    			<div class="col p-3 my-3">
				<div class="card" style="width: 18rem;">
				<h3 class="card-title">{{lesHackathons.theme}}</h3>
					<h4>Début : {{lesHackathons.dateDebut|date('d:m:Y')}}</h4>
					<h4>Heure de début : {{lesHackathons.heureDebut|date('H:i:s')}}</h4>
					<h4>Fin : {{lesHackathons.dateFin|date('d:m:Y')}}</h4>
					<h4>{{lesHackathons.lieu}} , {{lesHackathons.rue}},{{lesHackathons.ville}}, {{lesHackathons.codePostal}} </h4>
					<h4>Date limite d'inscription : {{lesHackathons.dateLimite|date('Y:m:d')}}</h4>
					<h4>Nombre de places total : {{lesHackathons.nbPlaces}}</h4>
					<btn href="">En savoir plus</btn>
				</div>
				</div>
				</div>
				{% endfor %}
			</ul>
	</div>
{% endblock %}
