{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container">
		<center>
			<ul>
				{% for lesHackathons in listeHackathons %}
					<li>{{lesHackathons.dateDebut|date('Y:m:d')}}</li>
					<li>{{lesHackathons.heureDebut|date('H:i:s')}}</li>
					<li>{{lesHackathons.dateFin|date('Y:m:d')}}</li>
					<li>{{lesHackathons.lieu}}</li>
					<li>{{lesHackathons.rue}}</li>
					<li>{{lesHackathons.ville}}</li>
					<li>{{lesHackathons.codePostal}}</li>
					<li>{{lesHackathons.theme}}</li>
					<li>{{lesHackathons.dateLimite|date('Y:m:d')}}</li>
					<li>{{lesHackathons.nbPlaces}}</li>
				{% endfor %}
			</ul>
		</center>
	</div>
{% endblock %}
