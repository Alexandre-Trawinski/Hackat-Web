{% extends 'base.html.twig' %}

{% block body %}
	<div class="container" style="margin-top:5%; margin-bottom:5%;">

		{{form_start(monForm)}}

		<div class="form-control" style="background-color: #CC4B2C; border-radius: 1rem; padding-left:10%; padding-right:10%; padding-top:3%; padding-bottom:3%;">
			<b style="color:white;">Nom</b>
			{{ form_widget(monForm.nom) }}
			<br>
			<b  style="color:white;">Prénom</b>
			{{ form_widget(monForm.prenom) }}
			<br>
			<b  style="color:white;">Date de naissance</b>
			{{ form_widget(monForm.datenaissance) }}
			<br>
			<b  style="color:white;">Rue</b>
			{{ form_widget(monForm.rue) }}
			<br>
			<b  style="color:white;">Ville</b>
			{{ form_widget(monForm.ville) }}
			<br>
			<b  style="color:white;">Code postal</b>
			{{ form_widget(monForm.codepostal) }}
			<br>
			<b style="color:white;"> Mail</b>
			{{ form_widget(monForm.mail) }}
			<br>
			<b style="color:white;">Téléphone</b>
			{{ form_widget(monForm.tel) }}
			<br>
			<b style="color:white;">Mot de passe</b>
			{{ form_widget(monForm.password) }}
			<br>
			<b style="color:white;">Portfolio</b>
			{{ form_widget(monForm.portfolio) }}
			<br>
			<input type="submit" class="btn btn-dark btn-lg btn-block" style="margin-top:2%; margin-bottom:2%" value="Ajouter">
		</div>
		{{form_end(monForm)}}
	</div>
{% endblock %}
